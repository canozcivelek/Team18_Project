<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/tvEvDeTitle"
            style="@style/tvDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            android:textColor="#f4fdf4"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:gravity="top"
        android:paddingTop="3dp" >

        <TextView
            style="@style/tvDetailHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Rate" />

        <TextView
            android:id="@+id/tvEvDeRate"
            style="@style/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:gravity="top"
        android:paddingTop="3dp" >

        <TextView
            style="@style/tvDetailHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Description" />

        <TextView
            android:id="@+id/tvEvDeDesc"
            style="@style/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:gravity="top"
        android:paddingTop="3dp" >

        <TextView
            style="@style/tvDetailHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Address" />

        <TextView
            android:id="@+id/tvEvDeAddress"
            style="@style/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:gravity="top"
        android:paddingTop="3dp" >

        <TextView
            style="@style/tvDetailHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Category" />

        <TextView
            android:id="@+id/tvEvDeCategory"
            style="@style/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:paddingTop="3dp" >

        <TextView
            style="@style/tvDetailHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Start Date" />

        <TextView
            android:id="@+id/tvEvDeStartDate"
            style="@style/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:paddingTop="3dp" >

        <TextView
            style="@style/tvDetailHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="End Date" />

        <TextView
            android:id="@+id/tvEvDeEndDate"
            style="@style/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:inputType="date" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:paddingTop="3dp" >
        <ImageView
            android:id="@+id/ivEvDeEndThumbnail"
            style="@style/tvDetail"
            android:background="#66eeeeee"
            android:src="@drawable/default_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp" >

        <Button
            android:id="@+id/btnEvDeAttend"
            style="@style/tvDetailHead"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:text="Attend"
            android:textSize="13sp" />
        <Button
            android:id="@+id/btnEvDeComments"
            style="@style/tvDetailHead"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:text="Comments"
            android:textSize="13sp" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp" >

        <Button
            android:id="@+id/btnEvDeLike"
            style="@style/tvDetailHead"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:text="Like"
            android:textSize="13sp" />
        <Button
            android:id="@+id/btnEvDeUnlike"
            style="@style/tvDetailHead"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:text="Unlike"
            android:textSize="13sp" />

        
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearEvDeDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingTop="3dp" >

        <Button
            android:id="@+id/btnEvDeDelete"
            style="@style/tvDetailHead"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Delete This Event"
            android:textSize="13sp" />
        
    </LinearLayout>     
    
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
		
       <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"/>
		<CheckBox
            android:id="@+id/cbSrcEvMyEvents"
            style="@style/cbNormal"
            
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".75"
            android:background="#c4eeec"
            
            android:text="Created By Me" />
       
       
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="Title" />

        <EditText
            android:id="@+id/etSrcEvTitle"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".75" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="Description" />

        <EditText
            android:id="@+id/etSrcEvDesc"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".75"
            android:lines="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="Address" />

        <EditText
            android:id="@+id/etSrcEvAddress"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".75" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="City" />

        <AutoCompleteTextView
            android:id="@+id/acSrcEvCity"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".75"
            android:hint="At least 2 chars for suggestion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="County" />

        <AutoCompleteTextView
            android:id="@+id/acSrcEvCounty"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".75"
            android:hint="At least 1 char for suggestion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="Category" />

        <Spinner
            android:id="@+id/spSrcEvCategory"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".75"
            android:prompt="@string/spWarn_CategoryMustBeSelected" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="Start Date" />

        <Spinner
            android:id="@+id/spSrcEvStartDate"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".17"
            android:entries="@array/array_comparisons" />

        <EditText
            android:id="@+id/etSrcEvStartDate"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".31"
            android:inputType="date"
            android:lines="2"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSrcEvStartDate"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".27"
            android:text="Calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="Start Time" />

        <Spinner
            android:id="@+id/spSrcEvStartTime"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".17"
            android:entries="@array/array_comparisons" />

        <EditText
            android:id="@+id/etSrcEvStartTime"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".31"
            android:inputType="time"
            android:lines="2"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSrcEvStartTime"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".27"
            android:text="Clock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="End Date" />

        <Spinner
            android:id="@+id/spSrcEvEndDate"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".17"
            android:entries="@array/array_comparisons" />

        <EditText
            android:id="@+id/etSrcEvEndDate"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".31"
            android:inputType="date"
            android:lines="2"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSrcEvEndDate"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".27"
            android:text="Calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".25"
            android:gravity="center_vertical"
            android:text="End Time" />

        <Spinner
            android:id="@+id/spSrcEvEndTime"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".17"
            android:entries="@array/array_comparisons" />

        <EditText
            android:id="@+id/etSrcEvEndTime"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".31"
            android:inputType="time"
            android:lines="2"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSrcEvEndTime"
            style="@style/tvNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".27"
            android:text="Clock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btnSrcEvSearch"
            style="@style/tvNormal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Search" />
    </LinearLayout>

</LinearLayout>